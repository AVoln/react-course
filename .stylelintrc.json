{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "no-missing-end-of-source-newline": null,
    "selector-class-pattern": [
      "^(?:[a-z][a-z0-9]*)([A-Z][a-z0-9]*)*$|^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$|^[A-Z][a-z0-9]*(?:[A-Z][a-z0-9]*)*$|^[a-z][a-z0-9]*(?:-[a-z0-9]+)*$",
      {
        "message": "Class name should use camelCase, PascalCase, UPPER_CASE or kebab-case"
      }
    ]
  }
}
